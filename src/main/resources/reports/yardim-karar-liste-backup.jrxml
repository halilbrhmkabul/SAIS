<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="yardim-karar-liste" pageWidth="595" pageHeight="842" columnWidth="535" leftMargin="30" rightMargin="30"
              topMargin="20" bottomMargin="20">

    <parameter name="RAPOR_BASLIGI" class="java.lang.String"/>
    <parameter name="RAPOR_TARIHI" class="java.lang.String"/>
    <parameter name="TOPLAM_KAYIT" class="java.lang.Integer"/>
    <parameter name="TOPLAM_TUTAR" class="java.lang.Double"/>

    <field name="id" class="java.lang.Long"/>
    <field name="muracaat.muracaatNo" class="java.lang.Long"/>
    <field name="muracaat.basvuruSahibi.ad" class="java.lang.String"/>
    <field name="muracaat.basvuruSahibi.soyad" class="java.lang.String"/>
    <field name="yardimAltTipi.adi" class="java.lang.String"/>
    <field name="verilenTutar" class="java.lang.Double"/>
    <field name="adetSayi" class="java.lang.Integer"/>
    <field name="yardimDurum" class="com.sais.enums.YardimDurum"/>

    <variable name="SIRA_NO" class="java.lang.Integer" calculation="Count">
        <initialValueExpression><![CDATA[0]]></initialValueExpression>
    </variable>

    <title>
        <band height="60">
            <textField>
                <reportElement x="0" y="10" width="535" height="25"/>
                <textElement textAlignment="Center">
                    <font size="14" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{RAPOR_BASLIGI}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="435" y="40" width="100" height="15"/>
                <textElement textAlignment="Right">
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA["Tarih: " + $P{RAPOR_TARIHI}]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <columnHeader>
        <band height="25">
            <staticText>
                <reportElement mode="Opaque" x="0" y="0" width="30" height="25" backcolor="#CCCCCC"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[No]]></text>
            </staticText>
            <staticText>
                <reportElement mode="Opaque" x="30" y="0" width="50" height="25" backcolor="#CCCCCC"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[M.No]]></text>
            </staticText>
            <staticText>
                <reportElement mode="Opaque" x="80" y="0" width="120" height="25" backcolor="#CCCCCC"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Basvuru Sahibi]]></text>
            </staticText>
            <staticText>
                <reportElement mode="Opaque" x="200" y="0" width="140" height="25" backcolor="#CCCCCC"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Yardim Tipi]]></text>
            </staticText>
            <staticText>
                <reportElement mode="Opaque" x="340" y="0" width="60" height="25" backcolor="#CCCCCC"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Tutar]]></text>
            </staticText>
            <staticText>
                <reportElement mode="Opaque" x="400" y="0" width="45" height="25" backcolor="#CCCCCC"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Adet]]></text>
            </staticText>
            <staticText>
                <reportElement mode="Opaque" x="445" y="0" width="90" height="25" backcolor="#CCCCCC"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Durum]]></text>
            </staticText>
        </band>
    </columnHeader>

    <detail>
        <band height="20">
            <textField>
                <reportElement x="0" y="0" width="30" height="20"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$V{SIRA_NO}]]></textFieldExpression>
            </textField>
            <textField isBlankWhenNull="true">
                <reportElement x="30" y="0" width="50" height="20"/>
                <box leftPadding="3"><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{muracaat.muracaatNo}]]></textFieldExpression>
            </textField>
            <textField isBlankWhenNull="true">
                <reportElement x="80" y="0" width="120" height="20"/>
                <box leftPadding="3"><pen lineWidth="0.5"/></box>
                <textElement verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{muracaat.basvuruSahibi.ad} + " " + $F{muracaat.basvuruSahibi.soyad}]]></textFieldExpression>
            </textField>
            <textField isBlankWhenNull="true">
                <reportElement x="200" y="0" width="140" height="20"/>
                <box leftPadding="3"><pen lineWidth="0.5"/></box>
                <textElement verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{yardimAltTipi.adi}]]></textFieldExpression>
            </textField>
            <textField isBlankWhenNull="true" pattern="#,##0.00">
                <reportElement x="340" y="0" width="60" height="20"/>
                <box rightPadding="3"><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{verilenTutar}]]></textFieldExpression>
            </textField>
            <textField isBlankWhenNull="true">
                <reportElement x="400" y="0" width="45" height="20"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{adetSayi} != null ? $F{adetSayi} : ""]]></textFieldExpression>
            </textField>
            <textField isBlankWhenNull="true">
                <reportElement x="445" y="0" width="90" height="20"/>
                <box leftPadding="3"><pen lineWidth="0.5"/></box>
                <textElement verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{yardimDurum}.name()]]></textFieldExpression>
            </textField>
        </band>
    </detail>

    <pageFooter>
        <band height="40">
            <textField>
                <reportElement x="0" y="5" width="200" height="15"/>
                <textElement>
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA["Toplam: " + $P{TOPLAM_KAYIT}]]></textFieldExpression>
            </textField>
            <textField isBlankWhenNull="true">
                <reportElement x="0" y="20" width="300" height="15"/>
                <textElement>
                    <font size="10" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{TOPLAM_TUTAR} != null ? "Toplam Tutar: " + String.format("%,.2f TL", $P{TOPLAM_TUTAR}) : ""]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="435" y="5" width="100" height="15"/>
                <textElement textAlignment="Right">
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA["Sayfa " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>
        </band>
    </pageFooter>

</jasperReport>
